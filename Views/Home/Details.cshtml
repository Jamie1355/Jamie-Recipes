@model JamiesRecipes.Models.Recipe

@{
    ViewData["Title"] = "Details";
}
<div>
    <h1>
        @Html.DisplayFor(model => model.Title)
    </h1>
    <img src="/Images/Uploads/@Model.ImageUrl" height="200px"/>
    <p>
        @Html.DisplayFor(model => model.Description)
    </p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Serves)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Serves)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Method)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Method)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dietary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dietary)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>